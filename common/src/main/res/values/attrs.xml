<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--HProgressBarLoading-->
    <declare-styleable name="hprogress">
        <attr name="progress" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="progressHeight" format="integer"/>
        <attr name="progressColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="AbScrollView">
        <attr name="mFactor" format="float" />
        <!--禁止的方向-->
        <attr name="disDirection">
            <flag name="top" value="0x01" />
            <flag name="bottom" value="0x10" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TabView">
        <attr name="tab_textViewSelColor" format="reference|color" />
        <attr name="tab_textViewUnSelColor" format="reference|color" />
        <attr name="tab_tabViewBackgroundColor" format="reference|color" />
        <attr name="tab_lineBackground" format="reference" />
        <attr name="tab_tabViewHeight" format="dimension" />
        <attr name="imageViewTextViewMargin" format="dimension" />
        <attr name="tab_textViewSize" format="dimension" />
        <attr name="tab_imageViewWidth" format="dimension" />
        <attr name="tab_imageViewHeight" format="dimension" />
        <attr name="tab_tabViewGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
        </attr>
        <attr name="tab_tabViewDefaultPosition" format="integer" />
    </declare-styleable>


    <declare-styleable name="MyRatingBar">
        <attr name="filledDrawable" format="integer" />
        <attr name="emptyDrawable" format="integer" />
        <attr name="rating" format="float"/>
        <attr name="numStars" format="integer"/>
        <attr name="minAllowedStars" format="integer"/>
        <attr name="starSize" format="dimension"/>
        <attr name="starSpacing" format="dimension"/>
        <attr name="starMargin" format="dimension" />
        <attr name="isIndicator" format="boolean"/>
        <attr name="stepSize" format="float"/>
    </declare-styleable>

    <declare-styleable name="DrawableSize">
        <attr name="drawableWidth" />
        <attr name="drawableHeight" />
    </declare-styleable>

</resources>
